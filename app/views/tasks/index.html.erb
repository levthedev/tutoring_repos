<h1>Tasks</h1>
<br>
<ul>
  <% @tasks.map do |task| %>
    <li>Task title: <%= task.title %></li>
    <li>Task description: <%= task.description %></li>
    <%= link_to 'Delete task', task_path(task.id), method: "DELETE" %>
    <%= link_to 'Edit task', edit_task_path(task.id) %>
  <% end %>
</ul>

<%= link_to 'New task', new_task_path %>
